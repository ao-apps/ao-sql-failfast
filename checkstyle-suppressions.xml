<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>

  <!-- TODO: Complete Javadocs -->
  <suppress checks="MissingJavadocMethod" />

  <!-- Consistency with standard "IOException" -->
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]FailFastConnectionImpl\.java$"
    message="'failFastIOException'"
  />

  <!-- Consistency with standard "SQLClientInfoException" -->
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]FailFastConnectionImpl\.java$"
    message="'failFastSQLClientInfoException'"
  />

  <!-- Consistency with standard "SQLException" -->
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]AbortedSQLException\.java$"
    message="'AbortedSQLException'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]ClosedSQLException\.java$"
    message="'ClosedSQLException'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]FailFastConnectionImpl\.java$"
    message="'failFastSQLException'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]FailFastSQLException\.java$"
    message="'FailFastSQLException'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]TerminalSQLException\.java$"
    message="'TerminalSQLException'"
  />

  <!-- Consistency with standard JDBC API names -->
  <suppress
    checks="ParameterName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]"
    message="'(nClob|nString)'"
  />
  <suppress
    checks="AbbreviationAsWordInName"
    files="[/\\]com[/\\]aoapps[/\\]sql[/\\]failfast[/\\]FailFast(NClob|SQLData|SQLInput|SQLOutput|SQLXML)Impl\.java"
    message="'FailFast(NClob|SQLData|SQLInput|SQLOutput|SQLXML)Impl'"
  />

  <!-- Will not reorder overloads -->
  <suppress checks="OverloadMethodsDeclarationOrder" />

</suppressions>
